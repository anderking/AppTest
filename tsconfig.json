{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "downlevelIteration": true,
    "experimentalDecorators": true,
    "module": "esnext",
    "moduleResolution": "node",
    "importHelpers": true,
    "target": "ES2022",
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2018",
      "dom"
    ],
    "skipLibCheck": true,
    "paths": {
      "@facades/*": [
        "src/app/core/facades/*"
      ],
      "@models/*": [
        "src/app/core/models/*"
      ],
      "@services/*": [
        "src/app/core/services/*"
      ],
      "@store/*": [
        "src/app/core/store/*"
      ],
      "@interfaces/*": [
        "src/app/core/interfaces/*"
      ],
      "@root/*": [
        "src/app/*"
      ],
      "@environments/*": [
        "src/environments/*"
      ],
      "@core/*": [
        "src/app/core/*"
      ],
      "@constants/*": [
        "src/app/core/constants/*"
      ],
      "@utilities/*": [
        "src/app/core/utilities/*"
      ],
      "@shared/*": [
        "src/app/shared/*"
      ]
    },
    "useDefineForClassFields": false
  },
  "angularCompilerOptions": {
    "fullTemplateTypeCheck": true,
    "strictInjectionParameters": true
  }
}
